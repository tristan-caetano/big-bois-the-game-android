<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".shop">

    <TextView
        android:id="@+id/invText2"
        android:layout_width="383dp"
        android:layout_height="250dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-thin"
        android:gravity="center|left"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="45sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <TextView
        android:id="@+id/shopText"
        android:layout_width="383dp"
        android:layout_height="200dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center|left"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />

    <Button
        android:id="@+id/buyHealth"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="1 Health Pack (50 CB)"
        android:textColor="#FF0000"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/buyStamina"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="1 Stamina Chonk (50 CB)"
        android:textColor="#12FF00"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="Return"
        android:textColor="#FFDB00"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <Button
        android:id="@+id/buyPP"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:text="5 PP (20 CB)"
        android:textColor="#001C8F"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />
</androidx.constraintlayout.widget.ConstraintLayout>